//////////////////////////////////////////////////////////

layout(location = 0) in vec2 inUV;

///////////////////////////////////////////////////////////

layout(location = 0) out vec4 outCol;

///////////////////////////////////////////////////////////

layout(binding = 4) uniform sampler2D shadow;

///////////////////////////////////////////////////////////

void main() 
{
    outCol = vec4(0, 0, 0, texture(shadow, inUV).a * 0.2);
}

